
<div class="col-lg-12">
    <div class="page-header">
        <h1 id="tables">Cursos</h1>
    </div>

    <div class="bs-component">
        <table class="table table-hover">
            <thead>
                <tr>
                <th class="campo-id">ID</th>
                <th>Nome</th>
                <th class="campo-opcoes">Opções</th>
                </tr>
            </thead>
            <tbody>
                {{#each cursos}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{nome}}</td>
                    <td class="campo-opcoes"> 
                        <a href="/curso/{{id}}"><i class="fa-solid fa-eye"></i></a>
                        <a href="/curso/update/{{id}}"><i class="fa-solid fa-pen"></i></i></a>
                        <a href="/curso/remove/{{id}}"><i class="fa-solid fa-trash-can"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <button class="source-button btn btn-primary btn-xs" role="button" tabindex="0">&lt; &gt;</button>
    </div><!-- /example -->
</div>